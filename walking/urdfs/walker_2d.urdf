<?xml version="1.0"?>
<robot name="walker_2d">
  
  <!-- ==================== BASE LINK (TORSO) ==================== -->
  <!-- ==================== BASE LINK (TORSO) ==================== -->
  <link name="torso">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="70.0"/>
      <!-- Box inertia: 0.6m × 0.4m × 0.2m, mass=70kg -->
      <!-- Ixx = 70*(0.4²+0.2²)/12 = 1.167 -->
      <!-- Iyy = 70*(0.6²+0.2²)/12 = 1.633 -->
      <!-- Izz = 70*(0.6²+0.4²)/12 = 1.867 -->
      <inertia ixx="1.167" iyy="1.633" izz="1.867"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- ==================== ARM 1 (RIGHT) ==================== -->
  
  <!-- Link 1.1: Right shoulder -->
  <link name="arm1_link1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <!-- Rod inertia: length=0.4m -->
      <inertia ixx="0.0667" iyy="0.0667" izz="0.001"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <joint name="arm1_joint1" type="revolute">
    <parent link="torso"/>
    <child link="arm1_link1"/>
    <origin xyz="0.3 0 0" rpy="0 0 0"/>  <!-- Right side: +0.3m -->
    <axis xyz="0 1 0"/>  <!-- Rotation around Y (2D in XZ plane) -->
    <limit lower="-3.14" upper="3.14" effort="100.0" velocity="2.0"/>
  </joint>

  <!-- Link 1.2: Right elbow -->
  <link name="arm1_link2">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.0667" iyy="0.0667" izz="0.001"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <joint name="arm1_joint2" type="revolute">
    <parent link="arm1_link1"/>
    <child link="arm1_link2"/>
    <origin xyz="0.4 0 0" rpy="0 0 0"/>  <!-- 0.4m along X -->
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100.0" velocity="2.0"/>
  </joint>

  <!-- Link 1.3: Right wrist/end-effector -->
  <link name="arm1_link3">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.0667" iyy="0.0667" izz="0.001"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <joint name="arm1_joint3" type="revolute">
    <parent link="arm1_link2"/>
    <child link="arm1_link3"/>
    <origin xyz="0.4 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100.0" velocity="2.0"/>
  </joint>

  <!-- ==================== ARM 2 (LEFT) ==================== -->
  
  <!-- Link 2.1: Left shoulder -->
  <link name="arm2_link1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.0667" iyy="0.0667" izz="0.001"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <joint name="arm2_joint1" type="revolute">
    <parent link="torso"/>  <!-- BRANCHING: also from torso -->
    <child link="arm2_link1"/>
    <origin xyz="-0.3 0 0" rpy="0 0 0"/>  <!-- Left side: -0.3m -->
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100.0" velocity="2.0"/>
  </joint>

  <!-- Link 2.2: Left elbow -->
  <link name="arm2_link2">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.0667" iyy="0.0667" izz="0.001"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <joint name="arm2_joint2" type="revolute">
    <parent link="arm2_link1"/>
    <child link="arm2_link2"/>
    <origin xyz="-0.4 0 0" rpy="0 0 0"/>  <!-- Negative X for left arm -->
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100.0" velocity="2.0"/>
  </joint>

  <!-- Link 2.3: Left wrist/end-effector -->
  <link name="arm2_link3">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.0667" iyy="0.0667" izz="0.001"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <joint name="arm2_joint3" type="revolute">
    <parent link="arm2_link2"/>
    <child link="arm2_link3"/>
    <origin xyz="-0.4 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100.0" velocity="2.0"/>
  </joint>

</robot>